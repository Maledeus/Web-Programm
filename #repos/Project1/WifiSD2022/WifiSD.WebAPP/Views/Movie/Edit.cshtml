@model WifiSD.WebAPP.Models.MovieModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MovieDto.Rating" class="control-label"></label>
                <select asp-for="MovieDto.Rating" asp-items="Model.Ratings" class="form-control"></select>
                <span asp-validation-for="MovieDto.Rating" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="MovieDto.Id" />
            <div class="form-group">
                <label asp-for="MovieDto.Name" class="control-label"></label>
                <input asp-for="MovieDto.Name" class="form-control" />
                <span asp-validation-for="MovieDto.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieDto.Price" class="control-label"></label>
                <input asp-for="MovieDto.Price" class="form-control" />
                <span asp-validation-for="MovieDto.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieDto.ReleaseDate" class="control-label"></label>
                <input asp-for="MovieDto.ReleaseDate" class="form-control" />
                <span asp-validation-for="MovieDto.ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieDto.GenreId" class="control-label"></label>
                <select asp-for="MovieDto.GenreId" class="form-control" asp-items="Model.Genres"></select>
                <span asp-validation-for="MovieDto.GenreId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieDto.MediumTypeCode" class="control-label"></label>
                <select asp-for="MovieDto.MediumTypeCode" class="form-control" asp-items="Model.MediumTypes"></select>
                <span asp-validation-for="MovieDto.MediumTypeCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
